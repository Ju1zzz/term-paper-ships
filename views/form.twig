{% extends  "__layout.twig" %}

{% block content %}
	<br><br>
	<form action="" enctype="multipart/form-data" method="POST">
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="inputEmail4">Адрес электронной почты</label>
				<input type="email" name="email" class="form-control" id="inputEmail4">
			</div>
		</div>
		<div class="form-group">
			<label for="inputAddress">Имя</label>
			<input type="text" name="name" class="form-control" id="inputAddress">
		</div>
		<div class="form-group">
			<label for="inputDate">Введите дату:</label>
			<input type="date" name ="date" class="form-control">
		</div>
		<div class="form-group">
			<label for="exampleFormControlTextarea1">Текст сообщения</label>
			<textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="5"></textarea>
		</div>
		<br>
		<button type="submit" class="btn btn-success" name="submit" value="Submit">Отправить</button>
	</form>
{% endblock %}
